<body>
    <div id="card">
        <h1>Weather pro max</h1>

        <form action="/weather" method="get">
            <div id="content">
                <label for="cityInput">City</label>
                <input placeholder="Enter city name" type="text" id="cityBox" name="city">

                <button id="btn" type="submit">Go</button>
            </div>
        </form>

    </div>
    
    <% if (locals.content) { %>
    <div id="card2">
        
            <h1><%=content.name%></h1>
            <h2>Current Temprature</h2>
            <p><%= content.main.temp %>Â°C</p>
            <h2>Wind Speed</h2>
            <p><%= content.wind.speed %> m/s</p>
     
            <% } %>

            <% if (locals.error) { %>
                <h3><%= error %></h3>
                <% } %>
    </div>
   

</body>

</html>